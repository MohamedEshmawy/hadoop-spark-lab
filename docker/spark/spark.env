# Spark Environment Configuration
SPARK_MASTER=yarn
SPARK_DEPLOY_MODE=client

# HDFS Configuration
CORE_CONF_fs_defaultFS=hdfs://namenode:9000

# YARN Configuration
YARN_CONF_yarn_resourcemanager_hostname=resourcemanager
YARN_CONF_yarn_resourcemanager_address=resourcemanager:8032

# Spark Configuration
# Use double underscore (__) to represent dots in property names
SPARK_CONF_spark__master=yarn
SPARK_CONF_spark__submit__deployMode=client

# Event logging to HDFS for History Server
SPARK_CONF_spark__eventLog__enabled=true
SPARK_CONF_spark__eventLog__dir=hdfs:///spark-logs
SPARK_CONF_spark__history__fs__logDirectory=hdfs:///spark-logs
SPARK_CONF_spark__history__ui__port=18080

# Driver and Executor configuration
SPARK_CONF_spark__driver__memory=1g
SPARK_CONF_spark__executor__memory=1g
SPARK_CONF_spark__executor__cores=1
SPARK_CONF_spark__executor__instances=2
SPARK_CONF_spark__dynamicAllocation__enabled=false

# Additional Spark settings
SPARK_CONF_spark__sql__adaptive__enabled=true
SPARK_CONF_spark__serializer=org.apache.spark.serializer.KryoSerializer
SPARK_CONF_spark__ui__port=4040
SPARK_CONF_spark__yarn__am__memory=512m

